{
	"name": "pytorch-lab",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
	},

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"python.pythonPath": "/opt/venv/bin/python",
	},

	// Add the IDs of extensions you want installed when the container is created.
	// Add gitlens
	"extensions": [
		"ms-python.python",
		"ms-toolsai.jupyter",
		"eamodio.gitlens"
	],
	"runArgs": [
        "--net", "host", "--gpus=all", "--device=/dev/dri:/dev/dri"
	],

    "containerEnv": {
        "DISPLAY": ":1",
        "NVIDIA_VISIBLE_DEVICES": "all",
        "NVIDIA_DRIVER_CAPABILITIES": "compute,utility,graphics"
    },
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/usr/lib/x86_64-linux-gnu/nvidia,target=/usr/lib/x86_64-linux-gnu/nvidia,type=bind,consistency=cached",
        "source=/usr/lib/nvidia,target=/usr/lib/nvidia,type=bind,consistency=cached",
        "source=/dev/nvidia0,target=/dev/nvidia0,type=bind",
        "source=/dev/nvidiactl,target=/dev/nvidiactl,type=bind",
        "source=${localWorkspaceFolder}/.devcontainer/bash_history/.bash_history,target=/home/vscode/.bash_history,type=bind,consistency=cached"
	
    ],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	//"forwardPorts": [9000],

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "pip3 install -r requirements.txt",

	// Comment out to connect as root instead.
	"remoteUser": "vscode"
}
